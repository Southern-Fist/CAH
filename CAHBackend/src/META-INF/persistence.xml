<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="CAHBackend">

		<!-- Comment this when I want to run locally -->
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/datasources/CAH</jta-data-source>
		<class>com.onegirloneguy.domain.UserProfile</class>
		<class>com.onegirloneguy.domain.Role</class>
		<class>com.onegirloneguy.domain.CardType</class>
		<class>com.onegirloneguy.domain.Card</class>
		<!-- non-jta-data-source>WhoIsYouDSUnmanaged</non-jta-data-source -->

		<properties>
			<property name="hibernate.transaction.manager_lookup_class"
				value="org.hibernate.transaction.JBossTransactionManagerLookup" />
			<property name="hibernate.show_sql" value="true" />
			<property name="eclipselink.ddl-generation" value="create-tables"/>
